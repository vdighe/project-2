<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <%- include ('../partials/head.ejs') %>
</head>

<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <table class="highlight">
        <thead>
            <tr>
                <th>Name</th>
                <th>Day</th>
                <th>Activity</th>
                <th>Distance</th>
                <th>Duration</th>
                <th colspan="3"> Action </th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < allActivity.length; i++){ %>
            <tr>
                <td><%= allActivity[i].name%></td>
                <td><%= allActivity[i].day.toDateString()%></td>
                <td><%=allActivity[i].activity.type%></td>
                <td><%=allActivity[i].distance%></td>
                <td><%=allActivity[i].duration%></td>
                <td>
                <td>
                    <form action="/users/<%= user._id%>/activity/<%=allActivity[i]._id%>?_method=DELETE" method="POST">
                        <input type="submit" class="btn waves-effect waves-light btn-small" value="Delete" />
                    </form>
                </td>
                <td>
                    <a href="/users/<%=user._id%>/activity/<%=allActivity[i]._id%>/edit"
                        class="btn waves-effect waves-light">Edit</a>
                </td>
                </td>
            </tr>
            <% } %>
            </form>
        </tbody>
    </table>
    <div class="row">
        <a href="/users/<%=user._id%>" class="btn waves-effect waves-light">Back</a>
        <a href="/users/<%= user._id%>/activity/new" class="btn waves-effect waves-light">New Activity</a>
    </div>
</body>

</html>