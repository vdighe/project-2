<a href="/users" class="brand-logo left">Run Tracker for <%= user.fullName%></a>

<ul class="right">
  <% if (currentUser) { %>
  <li>Welcome <%= currentUser.username %></li>
  <li>
    <form action="/sessions?_method=DELETE" method="POST">
      <input type="submit" value="Log Out" class="btn-small red" />
    </form>
  </li>
  <% } else { %>
  <li><a href="/users/<%= user._id%>/activity/new">New Activity</a></li>
  <li><a href="/sessions/new">Log In</a></li>
  <% } %>
</ul>